<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#ffff"
        >

        <ImageView
            android:layout_width="220dp"
            android:layout_height="200dp"
            android:src="@drawable/miner"
            android:layout_marginTop="35dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miners Register"
            android:textColor="#2d66dc"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization Name"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/minername"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organization Address"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/minernic"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="organization Reg Number"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/minregno"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/mincontact"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/descmin"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/emailz"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your password"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:id="@+id/pw1min"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm password"
            android:textColor="#2d66dc"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="350dp"
            android:layout_height="45dp"
            android:background="@drawable/forget"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"
            android:inputType="textPassword"
            android:id="@+id/pw2min"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"/>



        <Button
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Register"
            android:textSize="18dp"
            android:id="@+id/btnregisterminer"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have an account? Sign In"
            android:textColor="#2d66dc"
            android:textStyle="bold"
            android:id="@+id/loadlogzmin"
            android:textSize="18dp"
            android:layout_marginTop="15dp"/>

    </LinearLayout>
</ScrollView>