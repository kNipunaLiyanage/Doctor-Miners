<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleCrimeDetails"
    android:orientation="vertical"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Crime Details"
        android:textSize="30dp"
        android:gravity="center"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Crime Date"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textviewone"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Crime time"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textviewsix"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Report By"
        android:textSize="20dp"
        android:gravity="center"
        android:id="@+id/textviewtwo"
        />

    <TextView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:text="User Contact"
    android:textSize="20dp"
    android:gravity="center"
        android:id="@+id/textviewthree"
    />


    <TextView
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:text="User Nic"
    android:textSize="20dp"
    android:gravity="center"
        android:id="@+id/textviefour"
    />



    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Crime Type"
    android:textSize="20dp"
    android:gravity="center"
        android:id="@+id/textviefive"
    />


<Button
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:text="Mark This Crime As Reported"
    android:id="@+id/markasreported"
    />
</LinearLayout>
</ScrollView>